<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnSurface">@color/textTitle</item>

        <item name="android:textColor">@color/textBody</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textColorPrimary">@color/textTitle</item>
        <item name="android:textColorSecondary">@color/textBody</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>

        <item name="detailItemViewStyle">@style/ItemDetail</item>
        <item name="detailListItemViewStyle">@style/ListItemDetail</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item  name="android:windowActivityTransitions">true</item>

        <item name="snackbarButtonStyle">@style/SnackbarActionButton</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="textAppearanceButton">@style/TextAppearanceButton</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="ItemDetail" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListItemDetail" parent="ItemDetail">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="fab_card">
        <item name="android:background">@drawable/fab_background</item>
        <item name="cardBackgroundColor">#ff0099ff</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="speed_dial_item_card">
        <item name="android:background">@drawable/fab_menu_item_card_background</item>
        <item name="cardBackgroundColor">#c0c0c0</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:color">?android:textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fontSizeSmall</item>
    </style>

    <style name="ListItemSubtitleTitle">
        <item name="android:color">?android:attr/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fontSizeSmaller</item>
    </style>

    <style name="TabIndicator" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">?colorSecondary</item>
        <item name="tabIndicatorColor">?colorSecondary</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="SnackbarActionButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorControlNormal">?colorSecondary</item>
    </style>

    <style name="TextAppearanceButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MaterialButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlayButton</item>
    </style>

    <style name="ThemeOverlayButton">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
    </style>

    <style name="NavigationTextAppearance">
        <item name="colorPrimary">?android:textColorPrimary</item>
        <item name="colorOnSurface">?android:textColorPrimary</item>
    </style>

    <style name="AppListRecycler" parent="AppTheme">
        <item name="android:listDivider">@drawable/divider_app_list</item>
    </style>

    <style name="CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorControlNormal">?colorSecondary</item>
        <item name="contentScrim">?colorSurface</item>
        <item name="liftOnScroll">true</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <style name="CollapsingToolbarExpandedText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize" tools:ignore="SpUsage">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DatailListItemTitle">
        <item name="android:color">?android:textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/fontSizeSmall</item>
    </style>

    <style name="DetailListItemSubtitleTitle">
        <item name="android:color">?android:attr/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fontSizeTiny</item>
    </style>

</resources>

