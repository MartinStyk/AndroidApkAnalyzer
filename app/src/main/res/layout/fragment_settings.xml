<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ui.activity.about.AboutFragment">

    <LinearLayout
        style="@style/ListItemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_allow_metadata_upload"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <CheckBox
            android:id="@+id/allow_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/settings_upload_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_allow_metadata_upload_description" />

</LinearLayout>
